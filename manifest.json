{
  "name"            :"StackExchange Chat Reply Helper",
  "version"         :"0.700",
  "manifest_version":2,
  "description"     :"Highlights the message you're replying to.",
  "content_scripts" :[
    {
      "exclude_globs"  :[],
      "exclude_matches":[],
      "include_globs"  :["http://chat.stackexchange.com/*"],
      "js"             :["reply-highlight.user.js"],
      "matches"        :["http://*/*", "https://*/*"],
      "run_at"         :"document_idle"
    }
  ],
  "permissions"     :[
    "http://chat.stackexchange.com/"
  ]

}
